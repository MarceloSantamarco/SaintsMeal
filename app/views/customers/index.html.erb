<p id="notice"><%= notice %></p>

<div class="container bg-dark cont">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h1 class="display-4 text-white"> Clientes </h1>

      <table class="table table-striped table-hover table-light mt-3">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>CPF</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.name %></td>
              <td><%= customer.phone %></td>
              <td><%= customer.CPF %></td>
              <td><%= link_to customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                <i class="far fa-trash-alt"></i>
              <%end%>
              <td><%= link_to edit_customer_path(customer), class: "btn btn-primary" do %>
                <i class="far fa-edit"></i>
              <%end%>
              <td><%= link_to customer_path(customer), class: "btn btn-success" do %>
                <i class="far fa-eye"></i>
              <%end%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Novo Cliente', new_customer_path(), class: "btn btn-info" %>
    </div>
  </div>
</div>
