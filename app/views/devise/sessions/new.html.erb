<div class="container-fluid bg-dark cont">
  <div class="row">
    <div class="card bg-light col-sm-6 mt-3 mx-auto">
      <div class="card-body">
        <h2 class="card-title">Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" }, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" }, class: "form-control" %>
          </div>
          <div class="form-group form-check">
            <%= f.input :remember_me, class:"form-check-input", 
                        as: :boolean if devise_mapping.rememberable?%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-dark btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= render "devise/shared/links" %>
</div>
