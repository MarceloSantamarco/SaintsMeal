<p id="notice"><%= notice %></p>

<div class="container bg-dark cont">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h1 class="display-4 text-white"> Itens </h1>

      <table class="table table-striped table-hover table-light mt-3">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.kind %></td>
              <td><%= item.description %></td>
              <td><%= item.price %></td>
              <td><%= link_to item, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                <i class="far fa-trash-alt"></i>
              <%end%>
              <td><%= link_to edit_item_path(item), class: "btn btn-primary" do %>
                <i class="far fa-edit"></i>
              <%end%>
              <td><%= link_to item_path(item), class: "btn btn-success" do %>
                <i class="far fa-eye"></i>
              <%end%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Novo Item', new_item_path(), class: "btn btn-info" %>
    </div>
  </div>
</div>
