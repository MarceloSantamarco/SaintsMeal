<p id="notice"><%= notice %></p>

<div class="container bg-dark cont">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h1 class="display-4 text-white"> Cardápios </h1>

      <table class="table table-striped table-hover table-light mt-3">
        <thead>
          <tr>
            <th>Nome</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @menus.each do |menu| %>
            <tr>
              <td><%= menu.name %></td>
              <td><%= link_to menu, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                <i class="far fa-trash-alt"></i>
              <%end%>
              &nbsp;
              <%= link_to edit_menu_path(menu), class: "btn btn-primary" do %>
                <i class="far fa-edit"></i>
              <%end%>
              &nbsp;
              <%= link_to menu_path(menu), class: "btn btn-success" do %>
                <i class="far fa-eye"></i>
              <%end%>
              &nbsp;
              <%= link_to menu_items_path(menu), class: "btn btn-default" do %>
                <i class="fas fa-utensils"></i>
              <%end%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Novo Cardápio', new_menu_path(), class: "btn btn-info" %>
    </div>
  </div>
</div>
