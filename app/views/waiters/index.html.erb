<p id="notice"><%= notice %></p>

<div class="container bg-dark cont">
  <div class="row">
    <div class="col-sm-10 offset-sm-1">
      <h1 class="display-4 text-white"> Garçons </h1>

      <table class="table table-striped table-hover table-light mt-3">
        <thead>
          <tr>
            <th>Nome</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @waiters.each do |waiter| %>
            <tr>
              <td><%= waiter.name %></td>
              <td><%= link_to waiter, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
                <i class="far fa-trash-alt"></i>
              <%end%>
              <td><%= link_to edit_waiter_path(waiter), class: "btn btn-primary" do %>
                <i class="far fa-edit"></i>
              <%end%>
              <td><%= link_to waiter_path(waiter), class: "btn btn-success" do %>
                <i class="far fa-eye"></i>
              <%end%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Novo Garçom', new_waiter_path(), class: "btn btn-info" %>
    </div>
  </div>
</div>
